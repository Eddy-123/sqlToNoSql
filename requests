1. SQL
UPDATE clients
SET email = "yasmina@gmail.com"
WHERE nom = "Yasmina" AND nationalite = "Algérienne"

1. JSON
db.clients
.update( { nom : "Yasmina" }, { nationalite : "Algérienne"
},{$set:{ email : "yasmina@gmail.com"
}});

2. SQL
UPDATE clients
SET nom = "Aïcha"
WHERE age = 20

2. JSON
db.clients
.update( { age : 20
},{$set:{ nom : "Aïcha"
}});

3. SQL
UPDATE clients
SET age = 23
WHERE nom = "Yasmina"

3. JSON
db.clients
.update( { nom : "Yasmina"},{$set:{ age : 23
}});



